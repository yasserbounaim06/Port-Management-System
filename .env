# Database connection for Flask SQLAlchemy
SQLALCHEMY_DATABASE_URI=mysql+pymysql://root:yasser@localhost/container_tracker

# Flask configuration
FLASK_DEBUG=True
FLASK_CONFIG=config.py

# Flask API endpoint for posting container data
API_URL=http://127.0.0.1:5000/api/containers

# YOLO model path (relative to project root or absolute)
MODEL_PATH=yolov11_custom.pt

# Path to the image to process (relative to project root or absolute)
IMAGE_PATH=test/images/15.jpg

# OCR language(s) for EasyOCR (comma-separated, e.g., "en,fr")
OCR_LANGUAGES=en

# YOLO class indices for detection (comma-separated, e.g., "1,9")
YOLO_CLASSES=1,9

# YOLO output base directory for detection runs
YOLO_BASE_DIR=runs/detect
